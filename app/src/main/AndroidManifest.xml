<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.goo32v2.cooldict">

    <application
        android:allowBackup="false"
        android:allowClearUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".words.WordsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".worddetails.WordDetailActivity"
            android:label="@string/actionbar_title_word_detail"
            android:parentActivityName=".words.WordsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.goo32v2.cooldict.words.WordsActivity" />
        </activity>

        <activity
            android:name=".addword.WordManagerActivity"
            android:label="@string/actionbar_title_add_new_word_activity"
            android:parentActivityName=".words.WordsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.goo32v2.cooldict.words.WordsActivity" />
        </activity>

        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".words.WordsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.goo32v2.cooldict.words.WordsActivity" />
        </activity>
    </application>

</manifest>